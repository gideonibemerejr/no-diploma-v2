<style>
  .site-header__logo img {
    max-width: {{ section.settings.logo_width | escape | default: '180' | remove: 'px' | append: 'px' }};
  }

  .site-header__logo img {
    max-height: 80px;
    margin: .5rem auto;
  }
  @media screen and (max-width: 749px) {
    .site-header__logo img {
      max-width: 100%;
    }
  }



  .site-header__inner {
    background: transparent;
  }

  .site-header-wrapper {
    position: fixed;
    z-index: 20;
  }
  .template-index .site-header-container {
    display: block;
  }
</style>

<header
  class="site-header"
  role="banner"
  data-section-id="{{ section.id }}"
  data-section-type="header-section"
>
  <div class="grid grid--no-gutters grid--table site-header__inner">
    <div class="grid__item one-third">
      <nav class="db-l dn ph2 ph3-ns pv3 pv4-ns">
        {% for link in linklists.main-menu.links %}
        <a
          class="link {% if template.name == 'blog' and blog.title == 'Yearbook' %} white {% else %} black {% endif %} hover-red f6 sans-serif fw7 dib mr2"
          href="{{ link.url }}"
          title="{{ link.title }}"
          >{{ link.title | upcase }}</a
        >
        {% endfor %}
      </nav>
      <button
        type="button"
        class="dn-l site-header__link text-link site-header__toggle-nav js-drawer-open-left"
      >
        <span
          class="icon icon-hamburger {% if template.name == 'blog' and blog.title == 'Yearbook' %} white {% else %} black {% endif %}"
          aria-hidden="true"
        ></span>
        <span class="icon__fallback-text">{{
          'layout.navigation.menu' | t
        }}</span>
      </button>
    </div>
    <div class="grid__item one-third">
      <h1
        class="site-header__logo"
        itemscope
        itemtype="http://schema.org/Organization"
      >
        {% if section.settings.logo != blank %}
        <a href="/" itemprop="url" class="site-header__logo-link text-center">
          {% capture image_size %}{{ section.settings.logo_width | escape }}x{%
          endcapture %}
          <img
            class="site-header__logo-image"
            src="{{ section.settings.logo | img_url: image_size }}"
            srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
            alt="{{ shop.name }}"
            itemprop="logo"
          />
        </a>
        {% else %}
        <a
          href="/"
          class="site-header__link site-header__logo-link"
          itemprop="url"
          >{{ shop.name }}</a
        >
        {% endif %}
      </h1>
    </div>

    <div class="grid__item one-third text-right">
      <a
        href="/search"
        class="site-header__link site-header__search js-drawer-open-top"
      >
        <span
          class="icon icon-search hover-red {% if template.name == 'blog' and blog.title == 'Yearbook' %} white {% else %} black {% endif %}"
          aria-hidden="true"
        ></span>
        <span class="icon__fallback-text">{{
          'layout.navigation.search' | t
        }}</span>
      </a>
      <a
        href="/cart"
        class="site-header__link site-header__cart cart-link{% if settings.cart_type == 'drawer' %} js-drawer-open-right{% endif %}{% if cart.item_count > 0 %} cart-bubble--visible{% endif %}"
      >
        <span
          class="icon icon-cart hover-red {% if template.name == 'blog' and blog.title == 'Yearbook' %} white {% else %} black {% endif %}"
          aria-hidden="true"
        ></span>
        <span class="icon__fallback-text">{{ 'layout.cart.title' | t }}</span>
      </a>
    </div>
  </div>
</header>

{% schema %} { "name": "Header", "class": "header-section", "settings": [{
"type": "header", "content": "Logo" }, { "type": "image_picker", "id": "logo",
"label": "Logo image", "info": "450 x 200px max" }, { "type": "text", "id":
"logo_width", "label": "Custom logo width (in pixels)", "default": "180" }] } {%
endschema %}

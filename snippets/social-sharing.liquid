<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing" data-permalink="{{ permalinkURL }}">
  <a
    target="_blank"
    href="//www.facebook.com/sharer.php?u={{
      shop.url | append: share_permalink
    }}"
    class="share-facebook"
    title="{{ 'general.social.alt_text.share_on_facebook' | t }}"
  >
    <span class="icon icon-facebook" aria-hidden="true"></span>
    <span class="share-title" aria-hidden="true">{{
      'general.social.share_on_facebook' | t
    }}</span>
    <span class="visually-hidden">{{
      'general.social.alt_text.share_on_facebook' | t
    }}</span>
  </a>

  <a
    target="_blank"
    href="//twitter.com/share?text={{
      share_title | url_param_escape
    }}&amp;url={{ shop.url | append: share_permalink }}"
    class="share-twitter"
    title="{{ 'general.social.alt_text.share_on_twitter' | t }}"
  >
    <span class="icon icon-twitter" aria-hidden="true"></span>
    <span class="share-title" aria-hidden="true">{{
      'general.social.share_on_twitter' | t
    }}</span>
    <span class="visually-hidden">{{
      'general.social.alt_text.share_on_twitter' | t
    }}</span>
  </a>
</div>
